<?xml version="1.0"?>
<robot name="multirotor">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="White">
        <color rgba="1 1 1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.11 0.11 0.11"/>
      </geometry>
  </collision>
  <inertial>
      <mass value="3.1"/>
      <inertia ixx="0.197563" ixy="0" ixz="0" iyx="0" iyy="0.1458929" iyz="0" izx="0" izy="0" izz="0.1477"/>
  </inertial>
  </link>
  
  <!-- Front Right Motor with Tilt Capability -->
  <link name="connecting_link_motor_0"/>
  <joint name="base_link_to_connecting_link_0" type="revolute" dont_collapse="false">
    <parent link="base_link"/>
    <child link="connecting_link_motor_0"/>
    <origin xyz="0.35 0.42 0.325" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 1 0"/>
    <dynamics friction="1.0" damping="0.0"/>
    <limit lower="-0.785398" upper="0.785398" effort="20.0" velocity="10.0"/>
  </joint>
  <!-- Gazebo joint spring parameters to mirror SDF -->
  <gazebo reference="base_link_to_connecting_link_0">
    <spring_reference>0</spring_reference>
    <spring_stiffness>0</spring_stiffness>
  </gazebo>
  
  <link name="motor_0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.4 0.0 0.6 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0166704" ixy="0" ixz="0" iyx="0" iyy="0.0166704" iyz="0" izx="0" izy="0" izz="0.0167604"/>
    </inertial>
  </link>
  <joint name="connecting_link_to_motor_0" type="fixed" dont_collapse="false">
    <parent link="connecting_link_motor_0"/>
    <child link="motor_0"/>
    <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
  </joint>
  
  <!-- Front Left Motor with Tilt Capability -->
  <link name="connecting_link_motor_1"/>
  <joint name="base_link_to_connecting_link_1" type="revolute" dont_collapse="false">
    <parent link="base_link"/>
    <child link="connecting_link_motor_1"/>
    <origin xyz="0.35 -0.42 0.300" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 1 0"/>
    <dynamics friction="1.0" damping="0.0"/>
    <limit lower="-0.785398" upper="0.785398" effort="20.0" velocity="10.0"/>
  </joint>
  <!-- Gazebo joint spring parameters to mirror SDF -->
  <gazebo reference="base_link_to_connecting_link_1">
    <spring_reference>0</spring_reference>
    <spring_stiffness>0</spring_stiffness>
  </gazebo>
  
  <link name="motor_1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.6 0.0 0.4 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0166704" ixy="0" ixz="0" iyx="0" iyy="0.0166704" iyz="0" izx="0" izy="0" izz="0.0167604"/>
    </inertial>
  </link>
  <joint name="connecting_link_to_motor_1" type="fixed" dont_collapse="false">
    <parent link="connecting_link_motor_1"/>
    <child link="motor_1"/>
    <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
  </joint>
  
  <!-- Rear Motor with Tilt Capability -->
  <link name="connecting_link_motor_2"/>
  <joint name="base_link_to_connecting_link_2" type="revolute" dont_collapse="false">
    <parent link="base_link"/>
    <child link="connecting_link_motor_2"/>
    <origin xyz="-1.08 0 0.1" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 1 0"/>
    <dynamics friction="1.0" damping="0.0"/>
    <limit lower="-0.785398" upper="0.785398" effort="20.0" velocity="10.0"/>
  </joint>
  <!-- Gazebo joint spring parameters to mirror SDF -->
  <gazebo reference="base_link_to_connecting_link_2">
    <spring_reference>0</spring_reference>
    <spring_stiffness>0</spring_stiffness>
  </gazebo>
  
  <link name="motor_2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.4 0.0 0.6 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0166704" ixy="0" ixz="0" iyx="0" iyy="0.0166704" iyz="0" izx="0" izy="0" izz="0.0167604"/>
    </inertial>
  </link>
  <joint name="connecting_link_to_motor_2" type="fixed" dont_collapse="false">
    <parent link="connecting_link_motor_2"/>
    <child link="motor_2"/>
    <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
  </joint>
</robot>
